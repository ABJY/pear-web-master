@model NTU_FYP_REBUILD_17.ViewModels.CentreViewModel
@{
    ViewBag.Title = "Manage Centre";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    if (ViewBag.Modal == "true")
    {
        <script type="text/javascript">
            $(window).on('load', function () {
                $('#MyModal').modal('show');
            });
        </script>
    }
}

<div class="portlet box blue-madison">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-folder-open-o"></i>Manage Centre
        </div>
        <div class="tools"> </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover dt-responsive" id="sample_4" cellspacing="0">
            <thead>
                <tr>
                    <th class="min-tablet">Centre ID</th>
                    <th class="min-tablet">Name</th>
                    <th class="min-tablet">Country</th>
                    <th class="min-tablet">Address</th>
                    <th class="min-tablet">Contact No</th>
                    <th class="min-tablet">Email</th>
                    <th class="none"></th>
                    <th class="min-tablet"></th>
                    

                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.careCentre)
                {
                    <tr>
                        <td>@i.centreID</td>
                        <td>@i.centreName</td>
                        <td>@i.centreCountry</td>
                        <td>@i.centreAddress</td>
                        <td>@i.centreContactNo</td>
                        <td>@i.centreEmail</td>
                        <td>
                            <table>
                                <tr>
                                    <th></th>
                                    <th>Monday</th>
                                    <th>Tuesday</th>
                                    <th>Wednesday</th>
                                    <th>Thursday</th>
                                    <th>Friday</th>
                                    <th>Saturday</th>
                                    <th>Sunday</th>
                                </tr>
                                <tr>
                                    <th>Opening Hours</th>
                                    <td>@i.monStartTime</td>
                                    <td>@i.tueStartTime</td>
                                    <td>@i.wedStartTime</td>
                                    <td>@i.thursStartTime</td>
                                    <td>@i.friStartTime</td>
                                    <td>@i.satStartTime</td>
                                    <td>@i.sunStartTime</td>
                                </tr>
                                <tr>
                                    <th>Closing Hours</th>
                                    <td>@i.monEndTime</td>
                                    <td>@i.tueEndTime</td>
                                    <td>@i.wedEndTime</td>
                                    <td>@i.thursEndTime</td>
                                    <td>@i.friEndTime</td>
                                    <td>@i.satEndTime</td>
                                    <td>@i.sunEndTime</td>  
                                </tr>
                            </table>
                        </td>
                        <td>
                            @*<a href="@Url.Action("ViewCentre", "Account", new { id = @i.centreID })" class="btn dark btn-sm btn-outline sbold uppercase">
                                <i class="fa fa-envelope-open-o"></i> View*@
                            <a href="@Url.Action("UpdateCentre", "Account", new { id = @i.centreID })" class="btn dark btn-sm btn-outline sbold uppercase">
                                <i class="fa fa-edit"></i> Update
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.canAddCentre == 1)
        {
            <div class="margiv-top-10">
                <a href="@Url.Action("AddCentre", "Account")" class="btn dark btn-sm btn-outline sbold uppercase">
                    <i class="fa fa-plus"> </i> Add Centre
                </a>
            </div>
        }
    </div>
</div>

<link href="~/Content/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<script src="~/Content/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="~/Content/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Content/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>

<script src="~/Content/pages/scripts/table-datatables-responsive.min.js" type="text/javascript"></script>

