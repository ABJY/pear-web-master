@model IEnumerable<NTU_FYP_REBUILD_17.Models.RoleViewModel>

@{
    ViewBag.Title = "RoleIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="portlet box blue-madison">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-folder-open-o"></i>Manage Role
        </div>
        <div class="tools"> </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover dt-responsive" id="sample_3" cellspacing="0">
            <thead>
                <tr>
                    <th class="min-phone-l">User Type ID</th>
                    <th class="min-tablet">User Type</th>
                    <!--<th class="a">Last Name</th>
                    <th class="b">Email</th>
                    <th class="desktop4">User Type</th>
                    <th class="desktop4">Last Login</th>
                    <th class="desktop5"></th>-->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="margiv-top-10">
            <a href="@Url.Action("RoleCreate", "Account")" class="btn dark btn-sm btn-outline sbold uppercase">
                <i class="fa fa-plus"> </i> Add Role
            </a>
        </div>
    </div>
</div>

