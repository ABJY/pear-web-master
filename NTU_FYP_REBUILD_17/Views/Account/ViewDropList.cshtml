@model NTU_FYP_REBUILD_17.ViewModels.DropListViewModel

@{
    ViewBag.Title = "View Drop List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    if (ViewBag.Modal == "true")
    {
        <script type="text/javascript">
            $(window).on('load', function() {
                $('#MyModal').modal('show');
            });
        </script>
    }
}
<div class="portlet box blue-madison">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-folder-open-o"></i>Manage List
        </div>
        <div class="tools"> </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover dt-responsive" id="sample_4" cellspacing="0">
            <thead>
                <tr>
                    <th class="min-tablet">No.</th>
                    <th class="min-tablet">List</th>
                    <th class="desktop4">Checked</th>
                    <th class="desktop4">Not Checked</th>
                    <th class="desktop4">Last Checked Date</th>
                    <th class="desktop4"></th>
                    <th class="none">Not Checked List: </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListAtttribute)
                {
                    if (item.notCheck > 0)
                    {
                        ViewBag.Color = "#FF0000";
                    }
                    else
                    {
                        ViewBag.Color = "#000000";
                    }

                    <tr style="color:@ViewBag.Color">
                        <td>@item.index</td>
                        <td>@item.name</td>
                        <td>@item.check</td>
                        <td>@item.notCheck</td>
                        <td>@item.lastCheckedDate</td>
                        <td>
                            <a href="@Url.Action("ViewSelectedList", "Account", new { name = @item.name, view = "new" })" class="btn dark btn-sm btn-outline sbold uppercase">
                                <i class="fa fa-plus"></i> New
                            </a>
                            @if (item.notCheck > 0)
                            {
                                <a href="@Url.Action("ViewSelectedList", "Account", new { name = @item.name, view = "update" })" class="btn dark btn-sm btn-outline sbold uppercase">
                                    <i class="fa fa-edit"></i> Update
                                </a>
                            }
                        </td>
                        <td>@item.newValue</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

