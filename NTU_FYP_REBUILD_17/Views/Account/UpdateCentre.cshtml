@model NTU_FYP_REBUILD_17.ViewModels.ViewCentreViewModel

@{
    ViewBag.Title = "Update Centre";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    if (ViewBag.Modal == "true")
    {
        <script type="text/javascript">
            $(window).on('load', function () {
                $('#MyModal').modal('show');
            });
        </script>
    }
}

<div class="portlet light ">
    <div class="portlet-title tabbable-line">
        <div class="caption caption-md">
            <i class="icon-globe theme-font hide"></i>
            <span class="caption-subject font-blue-madison bold uppercase">Centre</span>
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("UpdateCentre", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "form1" }))
        {
            @Html.HiddenFor(p => p.centreID, new { @Value = @Model.centreID, @id = "ab" })
            <div align="center">
                <h3>Centre Information</h3>
            </div>
            <div class="col-md-offset-2">
                <p style="color:red">@ViewData["Error"]</p>
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-2 control-label">Centre ID</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.centreID, new { @class = "form-control", @Value = @Model.centreID, @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 control-label">Centre Name</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.centreName, new { @class = "form-control", @Value = @Model.centreName, @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 control-label">Centre Country</div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.centreCountry, new { @class = "form-control", @Value = @Model.centreCountry, @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 control-label">Centre Address<a style="color:red; font-size:large">*</a></div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.centreAddress, new { @class = "form-control", @Value = @Model.centreAddress })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 control-label">Centre Postal Code<a style="color:red; font-size:large">*</a></div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.centrePostalCode, new { @class = "form-control", @Value = @Model.centrePostalCode })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 control-label">Centre Email<a style="color:red; font-size:large">*</a></div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.centreEmail, new { @class = "form-control", @Value = @Model.centreEmail })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 control-label">Centre Contact No<a style="color:red; font-size:large">*</a></div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.centreContactNo, new { @class = "form-control", @Value = @Model.centreContactNo })
                </div>
            </div>
            <hr />
            <div align="center">
                <h3>Centre Operating Hours</h3>
            </div>
            <hr />
            <div class="form-group">
                <label class="col-md-2 control-label">Day</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.mon, new { @class = "form-control", @Value = @Model.mon, @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Opening Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.monStartTime, new { @id = "time", @class = "timepicker form-control", @Value = @Model.monStartTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Closing Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.monEndTime, new { @id = "time1", @class = " timepicker2 form-control", @Value = @Model.monEndTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Day</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.tue, new { @class = "form-control", @Value = @Model.tue, @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Opening Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.tueStartTime, new { @id = "time", @class = "timepicker form-control", @Value = @Model.tueStartTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Closing Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.tueEndTime, new { @id = "time1", @class = " timepicker2 form-control", @Value = @Model.tueEndTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Day</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.wed, new { @class = "form-control", @Value = @Model.wed, @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Opening Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.wedStartTime, new { @id = "time", @class = "timepicker form-control", @Value = @Model.wedStartTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Closing Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.wedEndTime, new { @id = "time1", @class = " timepicker2 form-control", @Value = @Model.wedEndTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Day</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.thurs, new { @class = "form-control", @Value = @Model.thurs, @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Opening Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.thursStartTime, new { @id = "time", @class = "timepicker form-control", @Value = @Model.thursStartTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Closing Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.thursEndTime, new { @id = "time1", @class = " timepicker2 form-control", @Value = @Model.thursEndTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Day</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.fri, new { @class = "form-control", @Value = @Model.fri, @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Opening Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.friStartTime, new { @id = "time", @class = "timepicker form-control", @Value = @Model.friStartTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Closing Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.friEndTime, new { @id = "time1", @class = " timepicker2 form-control", @Value = @Model.friEndTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Day</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.sat, new { @class = "form-control", @Value = @Model.sat, @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Opening Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.satStartTime, new { @id = "time", @class = "timepicker form-control", @Value = @Model.satStartTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Closing Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.satEndTime, new { @id = "time1", @class = " timepicker2 form-control", @Value = @Model.satEndTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Day</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.sun, new { @class = "form-control", @Value = @Model.sun, @readonly = true })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Opening Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.sunStartTime, new { @id = "time", @class = "timepicker form-control", @Value = @Model.sunStartTime })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Closing Hours</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.sunEndTime, new { @id = "time1", @class = " timepicker2 form-control", @Value = @Model.sunEndTime })
                </div>
            </div>
            <div class="margiv-top-10 text-center">
                <input class="space btn grey" type="button" onclick="window.location.replace('@Url.Action("ManageCentre", "Account")')" value="Cancel" />
                <input id="submit" type="submit" class="space btn btn-primary" value="Save Changes" />
            </div>
        }
    </div>
</div>

<script src="~/Content/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="~/Content/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
