@using Microsoft.AspNet.Identity
@using NTU_FYP_REBUILD_17.Models
@model NTU_FYP_REBUILD_17.ViewModels.ExportScheduleViewModel

@{
    ViewBag.Title = "Index";
    if (@User.Identity.GetUserTypeID() == "1")
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (@User.Identity.GetUserTypeID() == "6")
    {
        Layout = "~/Views/Shared/_LayoutSupervisor.cshtml";
    }
}

<div class="portlet light ">
    <div class="portlet-title tabbable-line">
        <div class="caption caption-md">
            <i class="icon-globe theme-font hide"></i>
            <span class="caption-subject font-blue-madison bold uppercase">Schedule</span>
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("ExportPatientScheduler", "ExportPatientSchedule", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "form1" }))
        {
            <div align="center">
                <h3>Export Schedule</h3>
            </div>
            <div class="col-md-offset-2">
                <p style="color:@ViewBag.Color">@ViewData["Error"]</p>
            </div>
            <hr />
            <div class="form-group">
                <label class="col-md-2 control-label">Schedule Date</label>
                <div class="col-md-10">
                    @Html.DropDownList("Weeks", null, new { @class = "form-control" })
                    <p>The exported excel sheet is protected with a password. To access the excel sheet, simply type in your first (given) name. The password is case-sensitive.</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" type="radio">Show Activity and Routine ID</label>
                <div class="col-md-10">
                    @Html.CheckBoxFor(m => m.showID, new { @id = "option1" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" type="radio">Show Prescription</label>
                <div class="col-md-10">
                    @Html.CheckBoxFor(m => m.showPrescription, new { @id = "option1" })
                </div>
            </div>
            <div class="margiv-top-10 text-center">
                <input class="space btn grey" type="button" onclick="window.location.replace('@Url.Action("Index", "Home")')" value="Cancel" />
                <input id="submit" type="submit" class="space btn btn-primary" value="Export" />
            </div>
        }
    </div>
</div>
