    </div>

</div>

<div id="EditModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            @using (Html.BeginForm("EditMedicalHistory", "Supervisor", FormMethod.Post, new { @role = "form", @id = "form1" }))
            {
