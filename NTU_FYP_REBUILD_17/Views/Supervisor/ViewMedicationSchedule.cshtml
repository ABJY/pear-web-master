<script>
    $(document).ready(function () {
        $('#sample_3').DataTable().destroy();
        $('#sample_3').DataTable({
            "order": [[4, "desc"], [0, "asc"]]
        });

        $('#datetimepicker1').datepicker({
            defaultDate: null,
            format: "dd/mm/yyyy",
            daysOfWeekDisabled: [0, 6]
        });
        $('#datetimepicker1').val();



        $('#datetimepicker2').datepicker({
            defaultDate: null,
            format: "dd/mm/yyyy",
            daysOfWeekDisabled: [0, 6]

        });
        $('#datetimepicker2').val();


    });
</script>