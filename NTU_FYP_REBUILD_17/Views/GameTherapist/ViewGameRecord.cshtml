@model NTU_FYP_REBUILD_17.ViewModels.ViewGameRecordViewModel
@{
    ViewBag.Title = "View Game Record";
    Layout = "~/Views/Shared/_LayoutGameTherapist.cshtml";

    if (ViewBag.Modal == "true")
    {
        <script type="text/javascript">
            $(window).on('load', function() {
                $('#MyModal').modal('show');
            });
        </script>
    }
}

<div class="portlet box blue-madison">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-folder-open-o"></i>View Game Record
        </div>
        <div class="tools"> </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover dt-responsive" id="sample_4" cellspacing="0">
            <thead>
                <tr>
                    <th class="min-tablet">No.</th>
                    <th class="min-tablet">Game Title</th>
                    <th class="min-tablet">Patient Name</th>
                    <th class="min-tablet">Score</th>
                    <th class="min-tablet">Time Taken</th>
                    <th class="min-tablet">Date</th>
                    <th class="min-tablet">Time</th>
                    <th class="none"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.gameRecord.Select((value, index) => new { index, value }))
                {
                    <tr>
                        <td>@( i.index + 1)</td>
                        <td>@i.value.gameName</td>
                        <td>@i.value.patientName</td>
                        <td>@i.value.score</td>
                        <td>@i.value.timeTaken</td>
                        <td>@i.value.date.ToString("dd/MM/yyyy")</td>
                        <td>@i.value.date.ToString("HH:mm")</td>
                        <td>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Performance Metric Name</th>
                                        @foreach (var j in i.value.performanceMetric.Select((value, index) => new { index, value }))
                                        {
                                            <td>@j.value.performanceMetricName</td>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><b>Performance Metric Value</b></td>
                                        @foreach (var k in i.value.performanceMetric.Select((value, index) => new { index, value }))
                                        {
                                            <td>@k.value.performanceMetricDetail</td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

